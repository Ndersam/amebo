<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|start"
    android:padding="@dimen/medium">

    <segmented_control.widget.custom.android.com.segmentedcontrol.SegmentedControl
        android:id="@+id/boardSorts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:distributeEvenly="true"
        app:radius="16dp"
        app:radiusForEverySegment="true"
        app:segmentHorizontalMargin="@dimen/medium"
        app:segments="@array/board_sorts"
        app:selectedBackgroundColor="?colorPrimary"
        app:selectedStrokeColor="?colorPrimary"
        app:selectedTextColor="?colorOnPrimary"
        app:textVerticalPadding="12dp"
        app:unSelectedStrokeColor="?colorPrimary"
        app:unSelectedTextColor="?colorPrimary" />

    <segmented_control.widget.custom.android.com.segmentedcontrol.SegmentedControl
        android:id="@+id/followBoardSorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:columnCount="2"
        app:distributeEvenly="false"
        app:radius="16dp"
        app:radiusForEverySegment="true"
        app:segmentHorizontalMargin="@dimen/medium"
        app:segments="@array/followed_board_sorts"
        app:selectedBackgroundColor="?colorPrimary"
        app:selectedStrokeColor="?colorPrimary"
        app:selectedTextColor="?colorOnPrimary"
        app:textVerticalPadding="12dp"
        app:unSelectedStrokeColor="?colorPrimary"
        app:unSelectedTextColor="?colorPrimary" />
</FrameLayout>